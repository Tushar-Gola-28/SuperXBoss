RewriteEngine On

# Ensure that URL requests are routed to index.html for React Router
RewriteBase /my-react-app/
RewriteRule ^$ /my-react-app/index.html [L]
RewriteRule ^(.*)$ /my-react-app/index.html [L]

# Optional: Force HTTPS if needed (uncomment if required)
# RewriteCond %{HTTPS} off
# RewriteRule ^ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]
